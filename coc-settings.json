{
    "codeLens.position": "eol",
    "codeLens.separator": "\t",
    "inlayHint.refreshOnInsertMode": true,
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "yank.enableCompletion": false,
    "suggest.completionItemKindLabels": {
        "constructor": "󰘦",
        "keyword": "",
        "variable": "",
        "value": "",
        "operator": "",
        "function": "󰊕",
        "reference": "",
        "constant": "",
        "method": "",
        "struct": "",
        "class": "",
        "interface": "",
        "text": "",
        "enum": "",
        "enumMember": "",
        "module": "󰕳",
        "color": "",
        "property": "",
        "field": "",
        "unit": "",
        "event": "",
        "file": "",
        "folder": "",
        "snippet": "",
        "typeParameter": "",
        "default": " "
    },
    "suggest.labelMaxLength": 60,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "󰨄",
    "diagnostic.virtualTextPrefix": " ❯❯❯ ",
    "diagnostic.virtualText": true,
    "diagnostic.enableMessage": "always",
    "codeLens.enable": true,

    "suggest.floatConfig": {
        "border": true,
        "rounded": true
    },
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true
    },
    "hover.floatConfig": {
        "border": true,
        "rounded": true
    },
    "git.floatConfig": {
        "border": true,
        "rounded": true
    },
    "cmake.formatter_args": ["--tab-size=4"],
    "colors.enable": true,

    "list.floatPreview": true,

    "semanticTokens.enable": true,
    "[python]": {
        "semanticTokens.enable": false
    },
    "clangd.compilationDatabaseCandidates": [
        "${workspaceFolder}/Release",
        "${workspaceFolder}/Debug",
        "${workspaceFolder}/build",
        "${workspaceFolder}"
    ],
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-17",
            "path": "~/.sdkman/candidates/java/17.0.11-oracle"
        },
        {
            "name": "JavaSE-21",
            "path": "~/.sdkman/candidates/java/21.0.3-graal",
            "default": true
        }
    ],
    "java.saveActions.organizeImports": true,

    "prettier.tabWidth": 4,
    "prettier.disableLanguages": ["markdown"],

    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "100", "-t", "py310"],

    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,

    "clangd.arguments": [
        "--clang-tidy",
        "--completion-style=detailed",
        "--cross-file-rename",
        "--enable-config"
    ],

    "snippets.ultisnips.directories": [
        "UltiSnips",
        "$HOME/.local/share/nvim/site/pack/packer/start/vim-snippets/UltiSnips"
    ],

    "sumneko-lua.enableNvimLuaDev": true,
    "snippets.ultisnips.pythonPrompt": false,
    "zig.zls.path": "zls",
    "zig.zls.useComptimeInterpreter": true,
    "zig.zls.checkForUpdate": false
}
