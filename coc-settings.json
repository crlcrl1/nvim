{
    "codeLens.position": "eol",
    "codeLens.separator": "\t",
    "inlayHint.refreshOnInsertMode": true,
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "yank.enableCompletion": false,
    "suggest.completionItemKindLabels": {
        "constructor": "󰘦",
        "keyword": "",
        "variable": "",
        "value": "",
        "operator": "",
        "function": "󰊕",
        "reference": "",
        "constant": "",
        "method": "",
        "struct": "",
        "class": "",
        "interface": "",
        "text": "",
        "enum": "",
        "enumMember": "",
        "module": "󰕳",
        "color": "",
        "property": "",
        "field": "",
        "unit": "",
        "event": "",
        "file": "",
        "folder": "",
        "snippet": "",
        "typeParameter": "",
        "default": " "
    },
    "suggest.labelMaxLength": 60,
    "diagnostic.virtualText": false,
    "diagnostic.enableMessage": "always",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.displayByVimDiagnostic": true,
    "codeLens.enable": true,

    "suggest.floatConfig": {
        "border": true,
        "rounded": true
    },
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true
    },
    "hover.floatConfig": {
        "border": true,
        "rounded": true
    },
    "git.floatConfig": {
        "border": true,
        "rounded": true
    },
    "cmake.formatter_args": ["--tab-size=4"],
    "colors.enable": true,
    "rust-analyzer.inlayHints.maxLength": 20,
    "rust-analyzer.lru.capacity": 512,
    "list.floatPreview": true,

    "semanticTokens.enable": true,
    "[python]": {
        "semanticTokens.enable": false,
        "inlayHint.enable": false
    },
    "clangd.compilationDatabaseCandidates": [
        "${workspaceFolder}/Release",
        "${workspaceFolder}/Debug",
        "${workspaceFolder}/build",
        "${workspaceFolder}"
    ],
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-21",
            "path": "~/.sdkman/candidates/java/current",
            "default": true
        }
    ],
    "java.saveActions.organizeImports": true,

    "prettier.tabWidth": 4,
    "prettier.disableLanguages": ["markdown"],

    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": ["--max-line-length", "100"],
    "python.formatting.blackArgs": ["--line-length", "100", "-t", "py310"],

    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,

    "clangd.arguments": [
        "--clang-tidy",
        "--completion-style=detailed",
        "--cross-file-rename",
        "--enable-config"
    ],

    "snippets.ultisnips.directories": [
        "UltiSnips",
        "$HOME/.local/share/nvim/site/pack/pckr/opt/vim-snippets/UltiSnips"
    ],

    "sumneko-lua.enableNvimLuaDev": true,
    "snippets.ultisnips.pythonPrompt": false,

    "languageserver": {
        "termux": {
            "command": "termux-language-server",
            "filetypes": ["PKGBUILD"]
        },
        "wgsl": {
            "command": "wgsl-analyzer",
            "filetypes": ["wgsl"],
            "initializationOptions": {
                "inlayHintsConfig": {
                    "enable": true
                }
            }
        },
        "hyprls": {
            "command": "hyprls",
            "filetypes": ["hyprlang"]
        }
    },
    "go.goplsPath": "/usr/bin/gopls"
}
